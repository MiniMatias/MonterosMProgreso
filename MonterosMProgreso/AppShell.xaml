<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="MonterosMProgreso.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MonterosMProgreso.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Agregar">
            <ShellContent
                Title="Agregar"
                ContentTemplate="{DataTemplate views:AgregarPrendaPage}" />
        </Tab>

        <Tab Title="Inventario">
            <ShellContent
                Title="Inventario"
                ContentTemplate="{DataTemplate views:ListaPrendasPage}" />
        </Tab>

        <Tab Title="Logs">
            <ShellContent
                Title="Logs"
                ContentTemplate="{DataTemplate views:LogsPage}" />
        </Tab>
    </TabBar>
</Shell>